<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.P2P">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="P2P.EditTextTheme" parent="Theme.P2P">
        <!-- Text edit label colors -->
        <item name="colorControlNormal">@color/green_eden</item>
        <item name="colorControlActivated">@color/green_eden</item>
        <item name="colorControlHighlight">@color/green_eden</item>
    </style>

    <style name="P2P.SecondEditTextTheme" parent="Theme.P2P">
        <!-- Text edit label colors -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <!-- Widgets -->
    <style name="Widget.P2P.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:minHeight">60dp</item>
        <item name="backgroundTint">@color/button_primary_background_color</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="Widget.P2P.Button.SecondOptionButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="backgroundTint">@color/button_secondary_background_color</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="Widget.P2P.Button.Outline" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/button_primary_background_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/button_primary_background_color</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="Widget.P2P.Button.SecondOptionOutline" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/medium</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="Widget.P2P.TextInputLayout" parent="@style/Widget.Design.TextInputLayout">
        <item name="endIconTint">@color/coral</item>
        <item name="android:textColorHint">@color/green_black</item>
        <item name="drawableTint">@color/coral</item>
    </style>

    <style name="Widget.P2P.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/green_eden</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.P2P.CircleCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/circle_checkbox</item>
        <item name="android:buttonTint">@color/coral</item>
        <item name="android:textColor">@color/green_black</item>
    </style>

    <!-- Text styles -->
    <style name="P2P_Title">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="P2P_Title_Extra">
        <item name="android:textSize">@dimen/font_huge_extra</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="P2P_Description">
        <item name="android:textSize">@dimen/font_medium_extra</item>
    </style>

    <style name="Text.ErrorAppearence" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/persimmon</item>
    </style>

    <!-- Bottom sheet -->
    <style name="TransparentBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>