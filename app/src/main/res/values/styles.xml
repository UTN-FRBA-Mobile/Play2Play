<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.P2P">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Widgets -->
    <style name="Widget.P2P.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:minHeight">60dp</item>
        <item name="backgroundTint">@color/button_background_color</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="Widget.P2P.Button.SecondOptionButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="Widget.P2P.TextInputLayout" parent="@style/Widget.Design.TextInputLayout">
        <item name="endIconTint">@color/coral</item>
        <item name="android:textColorHint">@color/green_black</item>
        <item name="drawableTint">@color/coral</item>
    </style>

    <style name="Widget.P2P.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/green_eden</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text styles -->
    <style name="P2P_Title">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="P2P_Description">
        <item name="android:textSize">@dimen/font_medium_extra</item>
    </style>
</resources>