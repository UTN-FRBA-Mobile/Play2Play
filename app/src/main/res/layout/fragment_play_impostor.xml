<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/screen_padding">

    <include layout="@layout/view_guidelines" />

    <ImageView
        android:id="@+id/task_image"
        android:layout_width="@dimen/game_task_image_size"
        android:layout_height="@dimen/game_task_image_size"
        android:layout_marginBottom="@dimen/large_extra"
        android:gravity="center"
        android:src="@drawable/ic_emulate_impostor"
        app:tint="@color/colorPrimary"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/screen_description"
        style="@style/P2P_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_extra"
        android:textAlignment="center"
        tools:text="@string/im_you_are_impostor" />

    <TextView
        android:id="@+id/word"
        style="@style/P2P_Title_Extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/big"
        android:gravity="center"
        android:textColor="@color/coral"
        tools:text="Esta es una palabra re contra larga" />

    <TextView
        android:id="@+id/key_word_theme_title"
        style="@style/P2P_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_extra"
        android:text="@string/im_key_word_theme_is"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/key_word_theme"
        style="@style/P2P_Title_Extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/big"
        android:gravity="center"
        android:textColor="@color/colorSecondary"
        tools:text="Esta es una temÃ¡tica re contra super larga" />

</LinearLayout>
