<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/error_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/screen_padding">

    <include layout="@layout/view_guidelines" />

    <ImageView
        android:id="@+id/task_image"
        android:layout_width="@dimen/game_task_image_size"
        android:layout_height="@dimen/game_task_image_size"
        android:layout_marginTop="@dimen/medium"
        android:gravity="center"
        android:contentDescription="@string/tf_winner"
        android:layout_marginBottom="@dimen/large_extra"
        android:src="@drawable/ic_impostor" />

    <TextView
        android:id="@+id/screen_description"
        style="@style/P2P_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        tools:text="@string/im_you_are_impostor"/>

    <TextView
        android:id="@+id/word"
        style="@style/P2P_Title_Extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large"
        tools:text="SIMULA" />


</LinearLayout>
