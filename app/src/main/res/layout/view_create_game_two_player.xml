<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <include layout="@layout/view_guidelines" />


    <ImageView
        android:id="@+id/first_avatar"
        android:layout_width="@dimen/huge"
        android:layout_height="@dimen/huge"
        android:src="@drawable/ic_baseline_account_circle_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/second_avatar"
        android:layout_width="@dimen/huge"
        android:layout_height="@dimen/huge"
        android:src="@drawable/ic_baseline_account_circle_yellow"
        android:layout_marginStart="@dimen/medium"
        app:layout_constraintStart_toEndOf="@id/first_avatar"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>